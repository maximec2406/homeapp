<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="TestPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <properties>
            <property name="hibernate.archive.autodetection" value="class" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect" />
            <property name="hibernate.connection.driver_class" value="org.h2.Driver" />
            <property name="hibernate.connection.url" value="jdbc:h2:./target/test" />
            <property name="hibernate.connection.user" value="sa" />
            <property name="hibernate.connection.password" value="" />
            <!--show sql - печатает в stdout-->
            <property name="hibernate.show_sql" value="true"/>
            <!--форматирование - не в одну строчку-->
            <property name="hibernate.format_sql" value="true"/>
            <!--возможные значения
            validate - проверяет, используется для прода
            update - обновление
            create - предыдущие данные уничтожаются, при старте прилы
            create-drop - после закрытия программы схема уничтожается-->
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
        </properties>
    </persistence-unit>
    <persistence-unit name="ProductionPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <properties>
            <property name="hibernate.archive.autodetection" value="class" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect" />
            <property name="hibernate.connection.driver_class" value="org.h2.Driver" />
            <property name="hibernate.connection.url" value="jdbc:h2:./target/prod" />
            <property name="hibernate.connection.user" value="sa" />
            <property name="hibernate.connection.password" value="" />
            <!--show sql - печатает в stdout-->
            <property name="hibernate.show_sql" value="true"/>
            <!--форматирование - не в одну строчку-->
            <property name="hibernate.format_sql" value="true"/>
            <!--возможные значения
            validate - проверяет, используется для прода
            update - обновление
            create - предыдущие данные уничтожаются, при старте прилы
            create-drop - после закрытия программы схема уничтожается-->
            <property name="hibernate.hbm2ddl.auto" value="create"/>
        </properties>
    </persistence-unit>
</persistence>